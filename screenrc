autodetach on
startup_message off
crlf off
multiuser off
defscrollback 2000
silencewait 15
bufferfile $HOME/.screen_exchange
shell -$SHELL
msgminwait 0
msgwait 5

caption splitonly string " "
sorendition = kb
sorendition +b kb
hardstatus alwayslastline "%{B}[ $USER@%H ] %-=%{w}%?%-Lw%?%{R}(%{W}%n*%f%t%?(%u)%?%{R})%{w}%?%+Lw%?%?%-= %{B} [ %l ]"

bind 'w' windowlist -b
bind 'W' windows
bind 'K' kill
bind 'I' login on
bind 'O' login off
bind '}' history
bind = resize =
bind + resize +3
bind - resize -3
